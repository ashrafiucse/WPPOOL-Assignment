<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Complete WordPress FlexTable Test Suite" parallel="tests" thread-count="1">
    
    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="true"/>
    
    <test name="WordPress Login Test">
        <classes>
            <class name="testcases.Part_A.WordPressLoginTest">
                <methods>
                    <include name="verifyWordpressLogin"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="FlexTable Plugin Activation Test">
        <classes>
            <class name="testcases.Part_A.FlexTablePluginTest">
                <methods>
                    <include name="verifyFlexTablePluginActivation"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="FlexTable Dashboard Navigation Test">
        <classes>
            <class name="testcases.Part_A.FlexTablePluginTest">
                <methods>
                    <include name="navigateToFlexTableDashboard"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="FlexTable Table Creation Test">
        <classes>
            <class name="testcases.Part_A.FlexTablePluginTest">
                <methods>
                    <include name="verifyNewTableCreationWithGoogleSheet"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="FlexTable Shortcode Display Test">
        <classes>
            <class name="testcases.Part_A.FlexTablePluginTest">
                <methods>
                    <include name="verifyTableDisplayUsingShortcode"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="FlexTable Title and Description Test">
        <classes>
            <class name="testcases.Part_A.FlexTablePluginTest">
                <methods>
                    <include name="verifyShowTableTableAndShowTableDescriptionDisplayProperly"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="FlexTable Entry Info and Pagination Test">
        <classes>
            <class name="testcases.Part_A.FlexTablePluginTest">
                <methods>
                    <include name="verifyEntryInfoDisplayCorrectlyAndPaginationFunctional"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="FlexTable Row and Height Configuration Test">
        <classes>
            <class name="testcases.Part_A.FlexTablePluginTest">
                <methods>
                    <include name="verifyUpdatingRowPerPageAndTableHeightWorksProperly"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="FlexTable Table Deletion Test">
        <classes>
            <class name="testcases.Part_A.FlexTablePluginTest">
                <methods>
                    <include name="verifyThatAfterDeleteTableProperMessageDisplayedInFrontEnd"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="Alpine.js Diagnostic Test">
        <classes>
            <class name="testcases.Part_A.AlpineJsDiagnosticTest">
                <methods>
                    <include name="verifyAlpineJsFunctionality"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="Simple Alpine.js Diagnostic Test">
        <classes>
            <class name="testcases.Part_A.SimpleAlpineJsDiagnosticTest">
                <methods>
                    <include name="verifySimpleAlpineJsFunctionality"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>