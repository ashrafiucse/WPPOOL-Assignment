<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="WPPOOL Performance Test Suite" parallel="methods" thread-count="2" data-provider-thread-count="2">
    <listeners>
        <listener class-name="utilities.TestListener"/>
        <listener class-name="utilities.CleanTestListener"/>
    </listeners>
    

    
    <test name="Performance Tests">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="true"/>
        <parameter name="performanceThreshold" value="5000"/> <!-- 5 seconds threshold -->
        
        <classes>
            <class name="testcases.Part_A.WordPressLoginTest">
                <methods>
                    <include name="testWordPressLogin"/>
                    <include name="testWordPressLogout"/>
                </methods>
            </class>
            
            <class name="testcases.Part_A.FlexTablePluginTest">
                <methods>
                    <include name="testFlexTablePluginInstallation"/>
                    <include name="testFlexTablePluginActivation"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>