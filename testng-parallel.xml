<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="WPPOOL Test Suite - Parallel" parallel="tests" thread-count="3" data-provider-thread-count="3" configfailurepolicy="continue">
    <listeners>
        <listener class-name="utilities.TestListener"/>
        <listener class-name="utilities.CleanTestListener"/>
    </listeners>
    

    
    <!-- Test isolation with separate browser instances -->
    <test name="WordPress Login Test - Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="testcases.Part_A.WordPressLoginTest"/>
        </classes>
    </test>
    
    <test name="Flex Plugin Test - Firefox">
        <parameter name="browser" value="firefox"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="testcases.Part_A.FlexTablePluginTest"/>
        </classes>
    </test>
    
    <test name="AlpineJS Diagnostic Test - Edge">
        <parameter name="browser" value="edge"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="testcases.Part_A.AlpineJsDiagnosticTest"/>
        </classes>
    </test>
</suite>