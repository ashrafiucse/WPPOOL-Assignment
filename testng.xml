<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="WPPOOL Test Suite" parallel="none">
     <listeners>
         <listener class-name="utilities.CleanTestListener"/>
         <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
     </listeners>
    
    <test name="WordPress Login Test - Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="testcases.Part_A.WordPressLoginTest"/>
        </classes>
    </test>
    
    <test name="Flex Plugin Test - Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="testcases.Part_A.FlexTablePluginTest"/>
        </classes>

    </test><test name="WooCommerce Plugin Test - Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="testcases.Part_B.WooCommerceTest"/>
        </classes>
    </test>
</suite>